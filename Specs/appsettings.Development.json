{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TestConfig": {
    /*
    * BDD Specs Test modes:
    *  API
    *  WebAPI
    *  WebPortal
    */
    "TestMode": "API",
    // URL of the target REST API
    "RestUrl": "https://localhost:10443",
    // Entity Framework InMemory Database Name
    "InMemoryDbName": "SpecsTestDatabase",
    "WebPortalDir": "ReactApp/ClientApp",
    /*
    * Available UI modes:
    *    Headless
    *    UI
    */
    "SeleniumUIMode": "Headless",
    /*
     * The type of browser to use
     *     Chrome
     *     Firefox
     */
    "BrowserType": "Firefox",
    "TestBrowserWidth": "1280",
    "TestBrowserHeight": "800"
  }
}
